{
  "manifest_version": 2,
  "name": "New Tab - Moment",
  "short_name": "new-tab-moment",
  "version": "0.5.6",
  "description": "A minimalist clock on the new tab page showing the current time, date, and weather. Based on Moment from Alfred Xing but for WebExtension.",
  "author": "laedit",
  "homepage_url":"https://github.com/laedit/new-tab-moment",
  "chrome_url_overrides": {
    "newtab": "moment.html"
  },
  "permissions": ["storage", "geolocation"],
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "64": "icon.svg",
    "128": "icon.svg"
  },
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },
  "browser_specific_settings": {
      "gecko": {
          "id": "new-tab-moment@laedit.net",
          "strict_min_version": "57.0"
      }
  }
}
